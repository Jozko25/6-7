{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npx prisma migrate deploy && npx prisma generate && npm run build"
  },
  "deploy": {
    "startCommand": "npm run start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
